generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model item {
  // itemCode: 정수형, 기본 키
  itemCode  Int  @id
  itemName String
  atk Int
  price Int
}

model character {
  characterId Int @id
}

model account {
  accountId String @id
  password String
  userName String
}


